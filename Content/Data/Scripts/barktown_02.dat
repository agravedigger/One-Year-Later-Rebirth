:if:<Register.Registered(EliseOff)>=true
	@Text.Show(Noel: <player.name>!)
	@Camera.deactivateThirdPerson
	@NPC.Warp(10,11,0,15)
	@Player.TurnTo(3)
	@NPC.Move(10,3)
	@NPC.Warp(10,8,-2,14)
	@NPC.Warp(11,8,0,14)
	@NPC.Turn(11,3)
	@NPC.Move(10,1)
	@Text.Show(Noel: Hey, before you go...~Let's have a match.)
