		@item.messagegive(18,15)
		@item.give(5,5)
		@item.messagegive(5,5)
		@Text.Show(<player.name>: That's an awful lot of~potions, Noel...)
		@Text.Show(Noel: Are you complaining?)
		@Music.pause
		@level.Wait(60)
		@Text.Show(<player.name>: No...)
		@Music.resume
		@Text.Show(Noel: Good!*Well, I'll head back to~the Lab now.*Bye, <player.name>!~Come back safe!)
		@Text.Show(<player.name>: Alright!~See you soon!)
		@Text.Show(Noel: See ya!)
		@NPC.Turn(10,3)
		@NPC.Move(10,2)
		@Text.Show(<player.name>: Scary as always...)
		@NPC.Turn(10,1)
		@Text.Show(Noel: Did you say something?)
		@Text.Show(<player.name>: Nothing!)
		@Player.Turn(2)
		@player.Move(2)
		@NPC.Warp(10,10,-2,10)
		@Text.Show(<player.name>: Better get to it!)
		@Register.unRegister(EliseOff)
		@Camera.activateThirdPerson
		:end
	:else
