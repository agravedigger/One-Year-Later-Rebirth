			@Pokemon.Addattack(0,98)
			@Pokemon.Addattack(0,113)
			@Pokemon.Addattack(0,105)
			@Pokemon.Addattack(0,242)
			@NPC.register(yourroom.dat|4|position|4,0,2)
		:when:Compassionate
			@register.Unregister(speak2)
			@Register.register(speak3)
			@Register.register(Compassionate)
